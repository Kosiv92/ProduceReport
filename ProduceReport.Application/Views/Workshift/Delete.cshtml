@model WorkshiftEditVM

<form method="post" asp-action="Delete">
    <input asp-for="WorkshiftResponse.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Изменить данные по смене</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for=@Model.WorkshiftResponse.Date></label>
                    </div>
                    <div class="col-4">
                        <input disabled asp-for=@Model.WorkshiftResponse.Date class="form-control" type="date" />                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for=@Model.WorkshiftResponse.ProduceQuantity></label>
                    </div>
                    <div class="col-4 mt-2">
                        <input disabled asp-for=@Model.WorkshiftResponse.ProduceQuantity class="form-control" /> тонн
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for=@Model.WorkshiftResponse.WorkshopName></label>
                    </div>
                    <div class="col-4">
                        <input disabled asp-for=@Model.WorkshiftResponse.WorkshopName disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row mt-2">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>


