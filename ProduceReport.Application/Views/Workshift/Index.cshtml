@model WorkshiftListVM

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список смен</h2>
        </div>
        @if (Model.IsWorkshopsExists)
        {
            <div class="col-6 text-right">
                <a asp-controller="Workshift" asp-action="Create" class="btn btn-primary">
                    Добавить новую смену
                </a>
            </div>
        }
        else
        {
            <div class="col-6 text-right">
                Для добавления смен необходимо добавить хотя бы один цех
            </div>
        }
    </div>

    <br /><br />

    @if (Model.WorkshiftResponses.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Порядковый номер смены
                    </th>
                    <th>
                        Дата
                    </th>
                    <th>
                        Цех
                    </th>
                    <th>
                        Объем продукции
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.WorkshiftResponses)
                {
                    <tr>
                        <td width="15%">@obj.Id</td>
                        <td width="20%">@obj.Date.Date.ToString("d")</td>
                        <td width="30%">@obj.WorkshopName</td>
                        <td width="20%">@obj.ProduceQuantity</td>
                        <td class="text-center">
                            <div class="w-55 btn-group" role="group">
                                <a asp-controller="Workshift" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">                                    
                                    Изменить
                                </a>
                                <a asp-controller="Workshift" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">                                    
                                    Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

