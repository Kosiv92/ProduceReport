@model IQueryable<WorkshopResponse>

<div class="container p-3">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Список цехов</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Workshop" asp-action="Create" class="btn btn-primary">
            Добавить новый цех
        </a>
    </div>
</div>

<br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Порядковый номер
                    </th>
                    <th>
                        Наименование
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Id</td>
                        <td width="50%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-55 btn-group" role="group">
                                <a asp-controller="Workshop" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Изменить
                                </a>
                                <a asp-controller="Workshop" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

